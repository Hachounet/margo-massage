---
import BaseLayout from "..//layouts/BaseLayout.astro";
import CTA from "../components/CTA.astro";
import AboutComponent from "../components/About.astro";


// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import {getOptimizedImage} from "../js/utils"
import landingImage from "../assets/images/margaux.png" // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getOptimizedImage(landingImage)
---

<BaseLayout
  title="A propos de moi"
  description="Je suis Margo, votre masseuse à domicile à La Rochelle. Venez découvrir ma passion pour le bien-être à destination des particuliers et des entreprises !"
  preloadedImage = {optimizedImage}
>
 <AboutComponent h1Choice={true}/>
 <CTA/>
</BaseLayout>


